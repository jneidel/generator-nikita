.b-slider {
    overflow: hidden;
    position: relative;
    width: 80%;
    margin: 0 auto;

    .swiper-wrapper {
        z-index: auto;
    }

    .swiper-slide {
        min-height: 200px;
        text-align: center;
        background-image: linear-gradient(3deg, $light-gray 0%, $white 40%, $white 60%, $light-gray 100%);
    }

    .prev,
    .next {
        position: absolute;
        top: 50%;
        z-index: 1;
        padding: 10px;
    }

    .prev {
        left: 1rem;
    }

    .next {
        right: 1rem;
    }
}
